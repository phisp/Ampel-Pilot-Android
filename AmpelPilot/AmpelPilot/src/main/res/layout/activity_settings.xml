<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="de.hsaugsburg.ampelpilot.SettingsActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ScaleFactor"
        android:textColor="@android:color/black" />

    <SeekBar
        android:id="@+id/seekBar_Scale"
        android:layout_width="match_parent"
        android:min="5"
        android:max="10"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MinNeighbours"
        android:textColor="@android:color/black" />

    <SeekBar
        android:id="@+id/seekBar_MinN"
        android:layout_width="match_parent"

        android:max="10"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Dauer bis zur Erkennung" />

    <SeekBar
        android:id="@+id/seekBar_Frames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fertig" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hilfe" />
</LinearLayout>

